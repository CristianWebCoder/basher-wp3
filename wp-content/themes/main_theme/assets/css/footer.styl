.section_footer
    display flex
    flex-direction column
    justify-content center
    .pre_foo
        padding 5rem 0 6.5rem
        width 100%
        .container
            max-width 1150px
            display flex
            align-items flex-end
            .col
                display flex
                flex-direction column
                gap 48px
                &:nth-child(1)
                    a
                        .logo_all
                            list-style none
                            li
                                figure
                                    img
                                        max-width 15rem
                                        height 56px
                    .social_links
                        display flex
                        list-style none
                        gap 3rem
                        li
                            a
                                img
                                    width 32px
                                    height 32px
                &:nth-child(2)
                    justify-content flex-end
                    .links_menu_prefooter
                        ul
                            display flex
                            gap 2.5rem
                            list-style none
                            justify-content flex-end
                            li
                                a
                                    font-family 'Gilroy Bold'
                                    color $gray_light
                                    transition all 0.3s ease
                                    &:hover
                                        color $black
    hr
        border none
        background-color $cuaternary_color
        height 2px
        width 90%
        margin 0 auto
    .pos_foo
        width 100%
        padding 1.375rem 0 6.25rem
        .container
            max-width 1150px
            display flex
            .col
                ul
                    list-style none
                    li
                        p
                            font-family 'Gilroy Bold'
                            color $gray_light
                .links_menu_posfooter
                    ul
                        display flex
                        list-style none
                        justify-content space-around
                        color $black
                        li
                            a
                                text-decoration underline
                                color $black
                .social_links
                    display none
@media screen and (max-width: 768px)
    .section_footer
        .pre_foo
            .container
                flex-direction column
                gap 3rem
                .col
                    width 100%
                    a
                        .logo_all
                            display flex
                            justify-content center
                    .social_links
                        justify-content center
                    &:nth-child(2)
                        .links_menu_prefooter
                            ul
                                justify-content center
        .pos_foo
            padding 1.375rem 1.375rem 2.5rem
            .container
                flex-direction column
                gap 1rem
                .col
                    width 100%
                    .copy
                        text-align center
@media screen and (max-width: 640px)
    .section_footer
        justify-content flex-start
        .pre_foo
            padding 5rem 1.25rem 2rem
            .container
                gap 3.625rem
                .col
                    a
                        .logo_all
                            justify-content flex-start
                            figure
                                img
                                    max-width 248px
                    &:nth-child(1)
                        .social_links
                            display none
                    &:nth-child(2)
                        .links_menu_prefooter
                            ul
                                justify-content flex-start
                                flex-direction column
        .pos_foo
            .container
                gap 3rem
                .col
                    .copy
                        text-align left
                    .links_menu_posfooter
                        margin-bottom 2rem
                        ul
                            justify-content flex-start
                            flex-direction column
                            gap 3rem
                    .social_links
                        display flex
                        list-style none
                        gap 1.5rem
                        li
                            a
                                img
                                    width 32px
                                    height 32px
