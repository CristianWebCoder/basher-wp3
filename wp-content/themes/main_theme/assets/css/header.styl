// 1. Header
.section_header
    background-color $white
    position sticky
    top 0
    width 100%
    min-height var(--nav-height)
    display flex
    align-items stretch
    z-index 10
    transition all 0.3s ease
    &.sticky
        background-color $black
        .container
            .header_links
                .links_menu
                    > ul
                        li
                            > a
                                color $white
                                &:hover
                                    opacity 0.5
                                    color $white
                            &.menu-item-has-children
                                .submenu
                                    background-color $black
            .language_switcher
                ul
                    .wp-block-navigation
                        .wp-block-navigation-item__label
                            color $white !important
                        .wp-block-navigation-submenu 
                            .wp-block-navigation__submenu-icon
                                    svg
                                        color $white !important
                    > .open-on-hover-click
                        .wp-block-navigation-item
                            .wp-block-navigation-item__content
                                span
                                    color $black !important
    .container
        display flex
        justify-content space-between
        align-items stretch
        // 1.1. Logo
        .header_logo
            display flex
            align-items center
            flex-shrink 0
            a
                ul
                    list-style none
                    &.logo_desktop
                        display block
                    &.logo_mobile
                        display none
                    li
                        display block
                        figure
                            img
                                width 100%
                                max-width 170px
                                height fit-content
        // 1.2. Menu
        .header_links
            display flex
            justify-content space-between
            align-items stretch
            gap 32px
            flex-wrap wrap
            .links_menu
                display flex
                > ul
                    display flex
                    justify-content space-between
                    gap 32px
                    list-style none
                    li
                        display flex
                        align-items center
                        &.menu-item-has-children
                            > a
                                display flex
                                justify-content space-between
                                align-items center
                                gap 10px
                            svg
                                width 20px
                                transition all 0.3s ease
                            &.rotate
                                svg
                                    transform rotate(180deg)
                            .submenu
                                position absolute
                                top 120%
                                left 50%
                                transform translateX(-50%)
                                background-color $white
                                padding 14px 10px
                                max-width 160px
                                width max-content
                                opacity 0
                                visibility hidden
                                transition 0.7s ease
                                border-radius 10px
                                box-shadow 0 10px 20px rgba(0,0,0,0.2)
                                &.show
                                    top 100%
                                    opacity 1
                                    visibility visible
                                ul
                                    display flex
                                    flex-direction column
                                    align-items stretch
                                    gap 10px
                                    li
                                        position relative
                                        display block
                                        width 100%
                                        a   
                                            display block
                                            width 100%
                                            padding 6px 10px
                                            font-size .9375rem
                        a
                            font-size .9375rem
                            color $black
                            text-transform uppercase
                            transition all 0.3s ease
                            padding 0 1.25rem
                            font-family 'Gilroy Bold'
                            &:hover
                                color $primary_color    
                            &.active
                                color $primary_color
                        &.current-menu-item
                            a
                                color $primary_color
            .link_button
                display flex
                align-items center
                ul
                    list-style none
                .btn_header
                    a
                        display flex
                        justify-content center
                        align-items center
                        border-radius 2.1875rem
                        background-color $primary_color
                        height 3.125rem
                        padding .25rem 2.375rem .5rem
                        font-size 1rem
                        color $white
                        text-transform uppercase
                        box-shadow 0px 1px 3px 0px rgba(0, 0, 0, 0.20)
                        transition all 0.3s ease
                        font-family 'Gilroy Bold'
                        &:hover
                            color $primary_color
                            background $green
                        &:active
                            filter brightness(0.95)
                                .icon
                                    display none
            .language_switcher
                display flex
                align-items center
                ul
                    list-style none
                    .wp-block-navigation
                        .wp-block-navigation-item__label
                            font-family 'Gilroy Bold'
                            text-transform uppercase
                            color $black
                            transition all 0.3s ease
                        .wp-block-navigation-submenu 
                            .wp-block-navigation__submenu-icon
                                    svg
                                        color $black
                    > .open-on-hover-click
                        .wp-block-navigation-item
                            .wp-block-navigation-item__content
                                background-color $white
                                padding .625rem 1.25rem
                                border-radius .3125rem
                                box-shadow 0px 4px 10px rgba(0,0,0,0.1)
                                &:hover
                                    background-color $primary_color
                                    span
                                        color $white !important
        // 1.2. Hamburguer menu
        .header_menu
            display none
@media screen and (max-width: 1440px)
    .section_header
        .container
            .header_links
                .links_menu
                    ul
                        gap 20px
@media screen and (max-width: 1024px)
    $nav_height_mobile = 90px
    :root
        --nav-height $nav_height_mobile
    .section_header
        z-index 11
@media screen and (max-width: 768px)
    .section_header
        .container
            padding 0 32px
            .header_links
                width 100%
                padding 60px 40px
                display flex
                flex-direction column
                justify-content flex-start
                gap 2.5rem
                position fixed
                top var(--nav-height)
                bottom 0
                right -100%
                background-color $white
                height calc(100vh - var(--nav-height))
                transition all 0.3s ease
                flex-wrap nowrap
                overflow-y auto
                &.sticky_links
                    background-color $black
                    .links_menu
                        ul
                            li
                                a
                                    border-bottom 1px solid #3e3e3e
                &.show
                    right 0
                .links_menu
                    > ul
                        width 100%
                        flex-direction column
                        gap 1rem
                        li
                            a
                                width 100%
                                font-size 1.25rem
                                font-family 'Gilroy Bold'
                                padding 0
                                border-bottom 1px solid $cuaternary_color
                                padding 1rem 0
                            &.menu-item-has-children
                                display flex
                                flex-direction column
                                align-items flex-start
                                > a
                                    width 100%
                                .submenu
                                    width 100%
                                    position relative
                                    top initial
                                    left initial
                                    transform initial
                                    max-width 100%
                                    opacity 0
                                    visibility hidden
                                    background transparent
                                    border-radius 0
                                    padding 0
                                    max-height 0
                                    box-shadow none
                                    &.show
                                        max-height 300px
                                        top initial
                                        opacity 1
                                        visibility visible
                                    ul
                                        display flex
                                        flex-direction column
                                        align-items stretch
                                        padding 10px 0
                                        margin-left 1.25rem
                                        li
                                            position relative
                                            display block
                                            width 100%
                                            a   
                                                display block
                                                width 100%
                                                padding .625rem 0px
                                                font-size 1.125rem
                .icon
                    display flex
                    justify-content flex-end
                    img
                        max-width 140px
            .header_logo
                a
                    ul
                        &.logo_desktop
                            display none
                        &.logo_mobile
                            display block
            .header_menu
                display flex
                align-items center
                .menu_toggle
                    width 38px
                    height 24px
                    display flex
                    flex-direction column
                    justify-content space-between
                    .line
                        width 100%
                        height 4px
                        border-radius 3px
                        background-color $primary_color
                        transition all 0.3s ease
                    &.active
                        .line:nth-child(1)
                            top 10px
                            transform rotate(45deg)
                        .line:nth-child(3)
                            bottom 10px
                            transform rotate(-45deg)
                        .line:nth-child(2)
                            opacity 0
                            visibility hidden
@media screen and (max-width: 600px)
    body
        &.admin-bar
            .section__header
                top 0
            .bar__top
                top var(--nav-height)
@media screen and (max-width: 500px)
    .section_header
        .container
            justify-content space-between
            // 1.1. Logo
            .header_logo
                width 50%
            // 1.2. Menu
            .header_links
                padding 20px 32px 20px
            // 1.3. Hamburguer Menu
            .header_menu
                width 50%
                display flex
                justify-content flex-end